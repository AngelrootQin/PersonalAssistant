<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginLeft="36dp"
                android:layout_toStartOf="@+id/list_item_card_text"
                android:background="@drawable/ic_action_note"
                android:padding="12dp"
                android:paddingLeft="32dp" />

            <TextView
                android:id="@+id/list_item_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/timetext"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:padding="8dp"
                android:text="google"
                android:textColor="#c4000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/list_item_card_text"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="72dp"
                android:padding="8dp"
                android:text="hello_world"
                android:textColor="#89000000"
                android:textSize="12sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
